<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodenbackground"
    tools:context="com.example.paras.bottle.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin"
        android:textColor="@android:color/transparent"
        android:clickable="true"
        android:layout_alignTop="@+id/ivBottle"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/ivBottle" />

    <ImageView
        android:id="@+id/ivBottle"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/bottle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
